<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linghang.we_talk.mapper.ArticleImageMapper">

    <resultMap id="ArticleImageResultMap" type="com.linghang.we_talk.entity.ArticleImage">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId"/>
        <result column="image_url" property="imageUrl"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO article_images (article_id, image_url, sort_order, created_at)
        VALUES
        <foreach collection="images" item="image" separator=",">
            (#{image.articleId}, #{image.imageUrl}, #{image.sortOrder}, NOW())
        </foreach>
    </insert>

    <select id="findByArticleId" resultMap="ArticleImageResultMap">
        SELECT * FROM article_images
        WHERE article_id = #{articleId}
        ORDER BY sort_order ASC
    </select>

    <delete id="deleteByArticleId">
        DELETE FROM article_images WHERE article_id = #{articleId}
    </delete>

</mapper>